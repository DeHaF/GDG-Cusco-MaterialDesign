<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fahed.developer.md_ejemplo6.DetailBookFragment"
    tools:showIn="@layout/activity_detail_book"
    android:id="@+id/lyContenido">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/ivCoverLibro"
                android:scaleType="centerInside"
                android:padding="5dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lyDescripcion">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:padding="20dp"
                    android:elevation="6dp"
                    android:background="#FFF">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_titulo_detail_book"
                        android:id="@+id/tvTitulo"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_margin="20dp"
                        android:fontFamily="sans-serif-regular"
                        android:textStyle="normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_autor_detail_book"
                        android:id="@+id/tvAutor"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_descripcion_detail_book"
                        android:id="@+id/tvDescripcion"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-regular"
                        android:textStyle="normal"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
